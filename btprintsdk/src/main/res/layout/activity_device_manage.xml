<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dm_button_back"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/leftblack_jiantou"
            android:gravity="center_vertical"
            android:text="@string/dm_button_back"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/dm_button_scan"
            android:background="@drawable/button_normal"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/device_Recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"></android.support.v7.widget.RecyclerView>

</LinearLayout>
